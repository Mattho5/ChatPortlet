<?xml version="1.0" encoding="UTF-8"?>
<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_3 http://www.gatein.org/xml/ns/gatein_resources_1_3"
	xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_3">

	<!-- GateIn will load this CSS for HomePagePortlet instead of the default 
		one. -->
	<portlet-skin>
		<!-- The name of the web application containing the portlet.xml file in 
			which BannerPortlet is definded. The application name is usually the same 
			as the name of the WAR through which the application was deployed. -->
		<application-name>instant-messenger-portlet</application-name>
		<!-- <portlet-name> value from the portlet.xml referenced above -->
		<portlet-name>ChatPortlet</portlet-name>
		<skin-name>Default</skin-name>
		<css-path>/skin/screen.css</css-path>
	</portlet-skin>
	</gatein-resources>